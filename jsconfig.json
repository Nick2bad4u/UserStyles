{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "typeRoots": [
      "./node_modules/@types",
      "@types",
      "./node_modules/@types",
      "@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}